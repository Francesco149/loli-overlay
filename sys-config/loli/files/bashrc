case "$-" in "*i*") return ;; esac # non-interactive

. "/etc/bash/shit"

alias realpath='busybox realpath'
alias ls='busybox ls'
alias sed='busybox sed'
alias xargs='busybox xargs'
alias basename='busybox basename'
alias rm='busybox rm'
alias date='busybox date'
alias sort='busybox sort'
alias cut='busybox cut'

alias sdispatch-conf='sudo dispatch-conf'
alias svim='sudo vim'
alias semerge='sudo emerge'
alias rtorrent='rtorrent -n -o import=/etc/rtorrent.rc'
alias sxiv='sxiv -r -t'

ehistory() {
	eix '-I*' --format '<installedversions:DATESORT>' | sort -nr | cut -f2-3
}

viebuild() {
	local ebuilddir
	ebuilddir="$(equery which -m "${1}")"
	[ $? -eq 0 ] || return $?
	vim $(dirname $ebuilddir)
}

addpaths "${HOME}/bin" "${HOME}/.local/bin" "${HOME}/go/bin"
